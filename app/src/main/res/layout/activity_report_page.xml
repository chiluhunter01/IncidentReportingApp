<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ReportPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/welcomeTxt"
        android:textSize="40sp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="REPORT INCIDENT"
        android:background="@drawable/text_view_shape"
        android:textColor="@color/blue"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/subject"
        android:layout_width="406dp"
        android:textColorHint="@color/blue"
        android:paddingLeft="20dp"
        android:layout_height="80dp"
        android:layout_below="@+id/instruction5"
        android:background="@drawable/edit_txt_shape"
        android:layout_marginTop="49dp"
        android:hint="Subject:"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Report your incident below indicating the severity"
        android:id="@+id/instruction"
        android:textAllCaps="true"
        android:paddingStart="5dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/welcomeTxt"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Severity levels are:"
        android:paddingStart="5dp"
        android:id="@+id/instruction2"
        android:layout_below="@+id/instruction"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1: HIGH-VERY SEVERE REQUIRES URGENT ATTENTION"
        android:paddingStart="10dp"
        android:id="@+id/instruction3"
        android:layout_below="@+id/instruction2"
        android:textSize="20sp"
        android:textColor="@color/white"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2: MEDIUM-MODERATE BUT REQUIRES URGENT ATTENTION"
        android:id="@+id/instruction4"
        android:paddingStart="10dp"
        android:layout_below="@+id/instruction3"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:text="3: LOW-DOES NOT REQUIRE URGENT ATTENTION"
        android:id="@+id/instruction5"
        android:layout_below="@+id/instruction4"
        android:textSize="20sp"
        android:textColor="@color/white"/>

    <EditText
        android:id="@+id/enterTxt"
        android:layout_width="406dp"
        android:layout_height="124dp"
        android:layout_below="@+id/subject"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:hint="Report incident here:"
        android:background="@drawable/edit_txt_shape"
        android:inputType="text"
        android:textColorHint="@color/blue"
        android:textSize="30sp" />

    <Button
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterTxt"
        android:text="Send"
        android:layout_marginTop="15dp"
        android:textSize="20sp"
        android:autoLink="email"
        android:background="@drawable/button_shape"
        android:layout_marginStart="60dp"
        android:id="@+id/sendBtn"/>

    <Button
        android:id="@+id/back"
        android:background="@drawable/button_shape"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enterTxt"
        android:layout_marginStart="30dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/sendBtn"
        android:text="BACK"
        android:textSize="22sp" />

</RelativeLayout>
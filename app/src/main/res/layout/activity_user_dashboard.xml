<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".UserDashboard">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dashboardTxt"
        android:background="@drawable/text_view_shape"
        android:text="DASHBOARD"
        android:textSize="50sp"
        android:textColor="@color/blue"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/dashboardTxt"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/makeReport"
        android:text="REPORT INCIDENT"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/education"
        android:text="EDUCATION PAGE"
        android:layout_below="@+id/makeReport"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:id="@+id/support"
        android:text="SUPPORT PAGE"
        android:layout_below="@+id/education"
        android:layout_centerHorizontal="true"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/support"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@drawable/text_view_shape"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:text="LOG OUT"
        android:textColor="@color/black"
        android:textSize="22sp" />

</RelativeLayout>